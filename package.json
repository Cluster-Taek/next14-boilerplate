{
  "name": "next-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "PORT=3000 next dev",
    "build": "next build",
    "start": "PORT=3000 next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "fsd": "steiger ./src",
    "pre-commit": "lint-staged && pnpm type-check && pnpm fsd",
    "mock": "json-server db.json --port 4001",
    "cli:dev": "cd cli && pnpm dev",
    "cli:build": "cd cli && pnpm build",
    "cli:test": "cd cli && node dist/index.js test-project",
    "cli:link": "cd cli && npm link",
    "cli:publish": "cd cli && pnpm publish --access public"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.62.7",
    "dayjs": "^1.11.13",
    "jwt-decode": "^4.0.0",
    "motion": "^11.15.0",
    "next": "^16.1.2",
    "next-auth": "^4.24.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.54.1",
    "react-icons": "^5.4.0",
    "react-spinners": "^0.17.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query-devtools": "^5.62.7",
    "@types/node": "^20",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "json-server": "^0.17.4",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "server-only": "^0.0.1",
    "steiger": "^0.5.11",
    "tailwindcss": "^4.1.18",
    "typescript": "^5",
    "typescript-eslint": "^8.53.0"
  },
  "description": "Bolierplate of Next JS",
  "main": "index.js",
  "repository": "https://github.com/Cluster-Taek/create-next-claude-app",
  "author": "Cluster-Taek <yst811@naver.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
